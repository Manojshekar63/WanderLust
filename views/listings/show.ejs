<% layout('layouts/boilerplate') %>
<body>
<h1><%= listing.title %></h1>
<p><%= listing.description %></p>
<% if (listing.image && listing.image.url) { %>
  <img src="<%= listing.image.url %>" alt="<%= listing.title %>" style="max-width:600px" />
<% } %>
<p>Price: $<%= listing.price %></p>
<p>Location: <%= listing.location %>, <%= listing.country %></p>

<p>
  <a href="/listings/<%= listing._id %>/edit">Edit</a> |
  <a href="/listings">Back to all listings</a>
</p>

<form method="POST" action="/listings/<%= listing._id %>" style="margin-top:12px">
  <input type="hidden" name="_method" value="DELETE" />
  <button type="submit">Delete listing</button>
</form>
</body>