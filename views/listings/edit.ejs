<% layout('layouts/boilerplate') %>
<body>
<h1>Edit Listing</h1>

<form method="post" action="/listings/<%= listing._id %>">
  <input type="hidden" name="_method" value="PUT" />
  <div>
    <label>Title</label><br />
    <input type="text" name="title" value="<%= listing.title %>" required />
  </div>
  <div>
    <label>Description</label><br />
    <textarea name="description" rows="4"><%= listing.description %></textarea>
  </div>
  <div>
    <label>Image URL</label><br />
    <input type="text" name="imageUrl" value="<%= listing.image && listing.image.url ? listing.image.url : '' %>" />
  </div>
  <div>
    <label>Price</label><br />
    <input type="number" name="price" step="0.01" value="<%= listing.price %>" />
  </div>
  <div>
    <label>Location</label><br />
    <input type="text" name="location" value="<%= listing.location %>" />
  </div>
  <div>
    <label>Country</label><br />
    <input type="text" name="country" value="<%= listing.country %>" />
  </div>
  <div style="margin-top:8px">
    <button type="submit">Save</button>
    <a href="/listings/<%= listing._id %>" style="margin-left:8px">Cancel</a>
  </div>
</form>
</body>